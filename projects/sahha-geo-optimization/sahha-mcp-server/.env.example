# Sahha MCP Server Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Sahha API Configuration
SAHHA_API_URL=https://sandbox.sahha.health/api
SAHHA_CLIENT_ID=your_client_id_here
SAHHA_CLIENT_SECRET=your_client_secret_here
SAHHA_AUTH_TOKEN=your_auth_token_here

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
API_KEY_REQUIRED=false
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Cache Configuration
CACHE_TTL_DEFAULT=1800
CACHE_TTL_PATTERNS=3600
CACHE_TTL_BIOMARKERS=1800
CACHE_TTL_INSIGHTS=2700

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring and Analytics
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=30
ENABLE_PERFORMANCE_MONITORING=true

# MCP Configuration
MCP_SERVER_NAME=sahha-health-data-server
MCP_SERVER_VERSION=1.0.0
MCP_TRANSPORT=http

# Database (Optional - for production deployments)
# DATABASE_URL=postgresql://username:password@hostname:port/database
# REDIS_URL=redis://username:password@hostname:port

# Production Security (Set these in production)
# ENCRYPTION_KEY=your_32_character_encryption_key_here
# WEBHOOK_SECRET=your_webhook_signature_secret_here
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Health Check Configuration
HEALTH_CHECK_INTERVAL=60000
SAHHA_API_HEALTH_CHECK=true

# Feature Flags
ENABLE_SMART_CACHING=true
ENABLE_GEO_OPTIMIZATION=true
ENABLE_REAL_TIME_INSIGHTS=true
ENABLE_ADVANCED_ANALYTICS=true

# Development Configuration
ENABLE_DEBUG_LOGGING=false
MOCK_SAHHA_API=false
DEVELOPMENT_PROFILES=test-profile-1,test-profile-2